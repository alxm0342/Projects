import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Collections;
import java.util.HashMap;
import java.util.Scanner;

public class Dictionary
{	
	public static void main(String[] args)
	{
		String lineIn = null;
		String tileInputLine = null;
		char[] tiles;
		ArrayList<String> dictionary = new ArrayList<String>();
		ArrayList<String> matches = new ArrayList<String>();
		Scanner keyboard = new Scanner(System.in);
		
		// load the tile input
		while (tileInputLine == null)
		{
			System.out.println("Input tiles:);
			tileInputLine = keyboard.nextLine();
		}

		System.out.println("Tile Input: " + tileInputLine + "\n");
		
		// load the dictionary
		System.out.println("Loading Dictionary...");
		do
		{
			lineIn = keyboard.nextLine();
			if ((lineIn != null) || (!lineIn.equals("")))
			{
				dictionary.add(lineIn);
				lineIn = keyboard.nextLine();
			}
		} while ((lineIn != null) || (!lineIn.equals("")));
		System.out.println("Done.\n");
		
		// sort dictionary for faster search
		System.out.println("Sorting Dictionary...");
		Collections.sort(dictionary);
		System.out.println("Done.\n");
		
		// find matches
		tiles = tileInputLine.toCharArray();
		for (char currentTile : tiles)
		{
			
		}
	}

}
