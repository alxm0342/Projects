
public class nQueens {
	
	boolean place (int k, int x[]) {
		//can a new queen be placed?
		//returns true if a queen can be placed in the k-th row and x[k]-th column
			for (int i=1; i<=(k-1); i++) {
		    	if ((x[i]==x[k]) || (Math.abs(x[i]-x[k])==Math.abs(i-k)))	//same diagonal or column
		        return false;
			}
		   return true;
	}
	
	void rNqueens(int k, int x) {
		for (int k=1; k <= n; k ++) {
			if (place(k,x)) {
				if (k==n) println("solution vector x");
		        else rNquees(k+1, x);
			}
		}
	}
	
	public static void main(String args[]) {
		
	}
	
}
