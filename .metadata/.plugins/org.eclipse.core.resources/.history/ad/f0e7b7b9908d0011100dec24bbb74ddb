
public class nQueens {
	
	public static void main(String args[]) {
		public boolean place(int k, int x) {
			//can a new queen be placed?
			//returns true if a queen can be placed in the k-th row and x[k]-th column
				for (int i=1; i<=(k-1); i++) {
			    	if ((x[i]==x[k]) || (abs(x[i]-x[k])==abs(i-k)))	//same diagonal or column
			        return false;
				}
			   return true;
			}
		 
		public void rNqueens(int k, int x) {
			for (int k=1; k <= n; k ++) {
				if (place(k,x)) {
					if (k==n) println("solution vector x");
			        else rNquees(k+1, x);
				}
			}
		}
	 }
	 
}
